<package>
  <name>libpointmatcher</name>
  <description brief="libpointmatcher">

     Fetches libpointmatcher through git submodule and makes it available to ROS

  </description>
  <version>1.0.0</version>
  <maintainer email="f.pomerleau@gmail.com">Francois Pomerleau</maintainer>
  <author>Stéphane Magnenat, François Pomerleau</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/libpointmatcher</url>
  <build_depend name="doxygen"/>
  <build_depend name="boost"/>
  <build_depend name="eigen"/>
  <build_depend name="yaml-cpp"/>
  <build_depend name="libnabo"/>

  <runtime_depend name="boost"/>
  <runtime_depend name="eigen"/>
  <runtime_depend name="yaml-cpp"/>
  <runtime_depend name="libnabo"/>
  <export>
    <cpp cflags="-I${prefix}/include" lflags="-L${prefix}/lib -lpointmatcher" />
    <rosdoc config="rosdoc.yaml" />
  </export>
</package>


