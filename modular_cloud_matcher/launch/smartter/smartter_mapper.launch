<launch>
	<node name="mapper" type="mapper" pkg="modular_cloud_matcher" output="screen">
		<remap from="cloud_in" to="/sick/point_cloud" />
		<param name="subscribe_scan" value="false"/>
		<param name="icpConfig" value="$(find modular_cloud_matcher)/launch/car/icp.yaml" />
		<param name="inputFiltersConfig" value="$(find modular_cloud_matcher)/launch/car/input_filters.yaml" />
		<param name="mapPostFiltersConfig" value="$(find modular_cloud_matcher)/launch/car/map_post_filters.yaml" />
		<param name="odom_frame" value="/base_link" />
		<param name="map_frame" value="/map" />
		<param name="useROSLogger" value="true" />
		<param name="minOverlap" value="0.2" /> 
		<param name="useConstMotionModel" value="false" /> 
		<param name="minReadingPointCount" value="400" /> 
		<param name="minMapPointCount" value="600000" /> <!-- quick fix to have map published each time -->
	</node>
</launch>
