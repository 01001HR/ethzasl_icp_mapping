<launch>
	<node name="mapper" type="mapper" pkg="ethzasl_icp_mapper" output="screen">
		<remap from="cloud_in" to="/firefly/vi_sensor/camera_depth/depth/points" />
		<param name="subscribe_scan" value="false" />
		<param name="icpConfig" value="$(find ethzasl_icp_mapper)/launch/vi_sensor/icp.yaml" />
		<param name="inputFiltersConfig" value="$(find ethzasl_icp_mapper)/launch/vi_sensor/input_filters.yaml" />
		<param name="mapPostFiltersConfig" value="$(find ethzasl_icp_mapper)/launch/vi_sensor/map_post_filters.yaml" />
		<!-- <param name="odom_frame" value="/firefly/odometry_sensor1/odometry_sensor1_link" /> -->
		<param name="odom_frame" value="/world" />
		<param name="map_frame" value="/map" />
		<param name="useROSLogger" value="true" />
		<param name="minOverlap" value="0.2" /> 
		<param name="maxOverlapToMerge" value="1" /> 
		<param name="minReadingPointCount" value="1000" /> 
		<param name="minMapPointCount" value="1000" /> 
		<param name="localizing" value="true" /> 
		<param name="mapping" value="true" /> 
	</node>
</launch>
